<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>Custom HTML Section</name>
	<author>Ivan Milincic</author>
	<creationDate>October 2015</creationDate>
	<copyright>Copyright (C) 2005 - 2015 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>lokomotivan@gmail.com</authorEmail>
	<authorUrl>www.kreativan.net</authorUrl>
	<version>1.0.0</version>
	<description>Custom HTML Section. Developer by www.kreativan.net</description>

	<customContent />

	<files>
		<filename module="mod_custom_section">mod_custom_section.php</filename>
		<folder>tmpl</folder>
	</files>

	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_CUSTOM_HTML" />
	<config>
		<fields name="params">
            
            <!-- default options -->
			<fieldset name="options">
				<field name="prepare_content" type="radio" class="btn-group btn-group-yesno" label="Prepare Content" default="0">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
                <field name="full_screen" type="radio" class="btn-group btn-group-yesno" label="Full Screen" default="0">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="background" type="media" label="Background" />
                <field name="overlay" type="radio" class="btn-group btn-group-yesno" label="Background Overlay" default="0">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
            
            <!-- customs options -->
            <fieldset name="options">
               <field name="height" type="text" label="Min Height" default="auto" />
               <field name="content_size" type="text" label="Content Size" default="auto" />
               <field name="content_padding" type="text" label="Content Padding" default="0px" />
               <field name="class" type="text" label="CSS Class" />
               <field name="css_id" type="text" label="CSS ID" />
               <field name="h_align" type="list" default="left" label="Content Align Horizontal">
                   <option value="left">Left</option>
                   <option value="right">Right</option>
                   <option value="center">Center</option>
               </field>
               <field name="v_align" type="list" default="middle" label="Content Align Vertical">
                   <option value="top">Top</option>
                   <option value="bottom">Bottom</option>
                   <option value="middle">Middle</option>
               </field>
           </fieldset>
		</fields>
	</config>
</extension>
